<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/trainbackground">

    <!-- Reservation Summary TextView as a heading -->
    <TextView
        android:id="@+id/textViewReservationSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reservation Summary"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewReservationSummary"
    android:layout_margin="16dp"
    android:elevation="4dp"
    android:radius="8dp"
    app:cardBackgroundColor="#E8E9EB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Rest of the content -->
        <TextView
            android:id="@+id/textViewReferenceId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservation ID: "
            android:textSize="22sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/textViewTravellerId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Traveller ID: "
            android:textSize="22sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/textViewTrainId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Train Name: "
            android:textSize="22sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/textViewReservationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservation Date: "
            android:textSize="22sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/textViewReservationTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservation Time: "
            android:textSize="22sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/fromLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From: "
            android:textSize="22sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/toLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To: "
            android:textSize="22sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:paddingBottom="16dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>

<Button
android:id="@+id/confirmButton"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Confirm Reservation"
android:layout_below="@id/card_view"
android:layout_centerHorizontal="true"
android:layout_marginTop="40dp"
android:textSize="20sp"
android:textColor="#FFFFFF"
android:background="#009688"
android:paddingStart="30dp"
android:paddingEnd="30dp"
android:paddingTop="15dp"
android:paddingBottom="15dp"
android:onClick="confirmReservation" />
    </RelativeLayout>
